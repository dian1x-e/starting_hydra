/JS
// WET SAND & FLICKERING
a.fft[0]

a.setBins(4)
a.setSmooth(0.8)

src(o0).modulate(noise(2),0.005).out(o2)
src(o2)
  .thresh(0.5, 0.04)

  .out()

//BREATHING WET SANDS 
src(o0)
  .modulate(noise(2), 0.005)
 
  .scale(
    () => 1 + 0.02 * Math.sin(time * 1.5 + 2),
    () => 1 + 0.02 * Math.sin(time * 1.8 + 3)
  )

  .out(o2)
src(o2)
  .thresh(0.5, 0.04)
  .out()
